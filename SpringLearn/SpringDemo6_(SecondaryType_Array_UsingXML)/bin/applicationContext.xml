<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="hdd1" class="HardDisk">
		<property name="size" value="20TB">
		</property>
	</bean>
	<bean id="hdd2" class="HardDisk">
		<property name="size" value="30TB">
		</property>
	</bean>
	<bean id="hdd3" class="HardDisk">
		<property name="size" value="40TB">
		</property>
	</bean>

	<bean id="cp" class="Computer">
		<property name="company" value="ROG"></property>
		<property name="hdd">
			<list>
				<ref bean="hdd1" />
				<ref bean="hdd2" />
				<ref bean="hdd3" />
			</list>
		</property>
	</bean>
</beans>