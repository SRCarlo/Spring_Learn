<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="haddr" class="Address" scope="singleton">
		<property name="city" value="Mumbai"></property>
		<property name="state" value="Maharashtra"></property>
	</bean>

	<bean id="oaddr" class="Address" scope="singleton">
		<property name="city" value="Akola"></property>
		<property name="state" value="Maharashtra"></property>
	</bean>

	<bean id="taddr" class="Address" scope="singleton">
		<property name="city" value="Nagpur"></property>
		<property name="state" value="Maharashtra"></property>
	</bean>
	<bean id="emp" class="Employee" scope="singleton" autowire="byName">
		<property name="ename" value="Naoe"></property>
		<property name="esal" value="100000007"></property>
	</bean>
</beans>